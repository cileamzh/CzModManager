{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CzModManager",
  "version": "0.1.0",
  "identifier": "com.cileamzh.ModsManager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:11420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "decorations": false,
        "title": "CzModManager",
        "width": 960,
        "height": 708,
        "dragDropEnabled": true,
        "devtools": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "msi",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
